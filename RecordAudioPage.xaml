<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AudioRecord.Forms"
             x:Class="Cards.RecordAudioPage">
    <ContentPage.Content>
        <StackLayout Padding="20,80,20,0" Orientation="Vertical" Spacing="15">
            
            <Label x:Name="recordingName" HorizontalOptions="Center" FontSize="35" />
            <Label x:Name="recordingDuration" HorizontalOptions="Center" FontSize="20" />

            <Button x:Name="recordButton" Text="Record" FontSize="24" HorizontalOptions="FillAndExpand" Clicked="recordButton_Clicked" />
            <Button x:Name="stopButton" Text="Stop" FontSize="24" HorizontalOptions="FillAndExpand" Clicked="stopButton_Clicked" />
            <Button x:Name="playButton" Text="Play" FontSize="24" HorizontalOptions="FillAndExpand" Clicked="playButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>